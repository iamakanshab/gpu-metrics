[Unit]
Description=Kubernetes AMD GPU Metrics Exporter
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
Environment=KUBECONFIG=/etc/kubernetes/kubeconfig
Environment=EXPORTER_PORT=9400
Environment=COLLECTION_INTERVAL=15
WorkingDirectory=/opt/gpu-exporter
ExecStart=/usr/bin/python3 /opt/gpu-exporter/k8s-gpu-exporter.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
